{
  "name": "iyzico/iyzipay-laravel",
  "type": "library",
  "description": "Iyzipay (by Iyzico) integration for your Laravel projects.",
  "keywords": [
    "iyzipay-laravel",
    "iyzico",
    "iyzipay"
  ],
  "homepage": "https://github.com/iyzico/iyzipay-laravel",
  "license": "MIT",
  "authors": [
    {
      "name": "Mehmet Aydin Bahadir",
      "email": "mehmet.aydin.bahadir@gmail.com",
      "homepage": "https://actuallymab.github.io",
      "role": "Software Engineer"
    }
  ],
  "require": {
    "php": "^8.2",
    "iyzico/iyzipay-php": "^2.0",
    "netresearch/jsonmapper": "^4.1"
  },
  "require-dev": {
    "orchestra/database": "^6.0",
    "orchestra/testbench": "^6.25"
  },
  "autoload": {
    "psr-4": {
      "Iyzico\\IyzipayLaravel\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Iyzico\\IyzipayLaravel\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit",
    "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
    "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    }
  },
  "config": {
    "sort-packages": true
  }
}
